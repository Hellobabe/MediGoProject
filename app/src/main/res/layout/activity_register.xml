<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/x"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradwallpaper"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/medigologo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="365dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">


        <EditText
            android:id="@+id/Uname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="2dp"
            android:alpha=".75"
            android:background="@drawable/user_name_field"
            android:hint="Username"
            android:textColor="#001942"
            android:textColorHint="#001942"
            android:inputType="textPersonName"
            android:paddingLeft="45dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/eemail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="2dp"
            android:alpha=".75"
            android:background="@drawable/email_field"
            android:hint="Email"
            android:textColor="#001942"
            android:textColorHint="#001942"
            android:inputType="textEmailAddress"
            android:paddingLeft="45dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/psswrd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="2dp"
            android:alpha=".75"
            android:background="@drawable/password_security_field"
            android:hint="Password"
            android:textColor="#001942"
            android:textColorHint="#001942"
            android:inputType="textPassword"
            android:paddingLeft="45dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/aaddress"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="2dp"
            android:alpha=".75"
            android:background="@drawable/home_address_field"
            android:hint="Address"
            android:textColor="#001942"
            android:textColorHint="#001942"
            android:inputType="textPostalAddress"
            android:paddingLeft="45dp"
            android:paddingRight="10dp" />

        <Button
            android:id="@+id/btnSU"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginVertical="10dp"
            android:text="CREATE ACCOUNT"
            android:textColor="#FFFFFF"
            android:background="@drawable/blue_button" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginVertical="10dp"
            android:text="OR"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnSI"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:text="SIGN IN"
            android:textColor="#FFFFFF"
            android:background="@drawable/red_button" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:id="@+id/progbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>